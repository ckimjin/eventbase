						<option value="KS">KS</option>
						<option value="KY">KY</option>
						<option value="LA">LA</option>
						<option value="ME">ME</option>
						<option value="MD">MD</option>
						<option value="MA">MA</option>
						<option value="MI">MI</option>
						<option value="MN">MN</option>
						<option value="MS">MS</option>
						<option value="MO">MO</option>
						<option value="MT">MT</option>
						<option value="NE">NE</option>
						<option value="NV">NV</option>
						<option value="NH">NH</option>
						<option value="NJ">NJ</option>
						<option value="NM">NM</option>
						<option value="NY">NY</option>
						<option value="NC">NC</option>
						<option value="ND">ND</option>
						<option value="OH">OH</option>
						<option value="OK">OK</option>
						<option value="OR">OR</option>
						<option value="PA">PA</option>
						<option value="RI">RI</option>
						<option value="SC">SC</option>
						<option value="SD">SD</option>
						<option value="TN">TN</option>
						<option value="TX">TX</option>
						<option value="UT">UT</option>
						<option value="VT">VT</option>
						<option value="VA">VA</option>
						<option value="WA">WA</option>
						<option value="WV">WV</option>
						<option value="WI">WI</option>
						<option value="WY">WY</option>
					</select>
				</p>

				<p>
					<label class="control-label" for="password">Password:</label>
					<input class="form-control" type="password" name="password" id="password" placeholder="Password">
				</p>

				<p>*Password should be at least 8 characters</p>
				
				<p>
					<label class="control-label" for="cpassword">Confirm PW:</label>
					<input class="form-control" type="password" name="cpassword" id="cpassword" placeholder="Confirm Password">
				</p>

				<div class="text-right">
					<input type="submit" value="Register" class="btn btn-success">
				</div>
				</form>

				<div id="msg">
					<% if flash.any? %>
						<% flash[:errors].each do |f| %>
						<li><%= f %></li>
						<% end %>
					<% end %>
				</div>

			</div>

			<div id="login_form" class="well col-md-6">
				<form action="/login" method="post">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<h3 align="center">Login</h3>
					<br>
					<p>
						<label class="control-label" for="loginemail">Email:</label>
						<input class="form-control" type="text" name="loginemail" id="loginemail" placeholder="Email Address">
					</p>
					<p>
						<label class="control-label" for="loginpass">Password:</label>
						<input class="form-control" type="password" name="loginpass" id="loginpass" placeholder="Password">
					</p>
					<div class="text-right">
						<input type="submit" value="Login" class="btn btn-success">
					</div>
				</form>
				<h4><%= session[:errors] %></h4>
			</div>

		</div>
	</div>

	<div class="footer">
		<div class="container text-center">
			<p>&copy; Eventbase 2015</p>
		</div>
	</div>

</body>
